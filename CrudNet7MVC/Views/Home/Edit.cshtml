@model CrudNet7MVC.Models.Contact
@{
    ViewData["Title"] = "Edit contact";
}

<h1 class="text-center">Contacto con .NET 7 (.NET CORE MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Edit user</strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Edit">
                    <!-- User ID -->
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-warning d-block mx-auto">Edit user <i class="bi bi-pencil"></i></button>
                    </div>
                </form>

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary text-white text-decoration-none">Go back</a>
            </div>
        </div>
    </div>
</div>