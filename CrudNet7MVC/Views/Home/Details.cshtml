@model CrudNet7MVC.Models.Contact
@{
    ViewData["Title"] = "User details";
}

<h1 class="text-center">Contacto con .NET 7 (.NET CORE MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>User details</strong></h3>
            </div>

            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Id: </strong>@Html.DisplayFor(m => m.Id)</li>
                    <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group-item"><strong>Phone: </strong>@Html.DisplayFor(m => m.Phone)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                </ul>

                <a asp-controller="Home" asp-action="Index" class="btn btn-primary text-white text-decoration-none">Go back</a>
            </div>
        </div>
    </div>
</div>